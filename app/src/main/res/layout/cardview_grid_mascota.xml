<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvMascota"
    android:layout_height="190dp"
    android:layout_width="match_parent"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    card_view:cardCornerRadius="@dimen/corner_radius_cardview"
    android:layout_gravity="center_horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="4dp"
        android:gravity="center_horizontal"
        >

        <ImageView
            android:id="@+id/imgFotoCV"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:src="@drawable/mascota1"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
            <ImageButton
                android:id="@+id/btnLike"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/ic_bone"
                />
            <TextView
                android:id="@+id/tvLikesCV"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="0"
                android:textSize="@dimen/nombre_cardview"
                android:textStyle="bold"
                android:layout_gravity="right"
                android:layout_marginLeft="30dp"
                />

            <ImageView
                android:id="@+id/imgBone"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/ic_yellow_bone"
                android:layout_gravity="right"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">
            <TextView
                android:id="@+id/tvNombreCompletoCV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NombreCompleto"
                android:textSize="@dimen/nombre_cardview_perfil"
                android:textStyle="bold"/>

        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>